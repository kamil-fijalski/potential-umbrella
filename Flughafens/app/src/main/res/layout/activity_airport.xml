<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.seeksoul.flughafens.AirportActivity">

        <ImageView
            android:id="@+id/arp_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:src="@drawable/main_plane" />

        <TextView
            android:id="@+id/arp_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/arp_image"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:text="TEST TESTOWY TESTEM"
            android:textSize="24sp"
            android:textStyle="bold" />

        <com.bluejamesbond.text.DocumentView
            android:id="@+id/info_1"
            xmlns:ext="http://schemas.android.com/apk/res-auto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            ext:documentView_antialias="true"
            ext:documentView_cacheConfig="auto_quality"
            ext:documentView_hyphen="-"
            ext:documentView_reverse="false"
            ext:documentView_text="Test1"
            ext:documentView_textAlignment="justified"
            ext:documentView_textFormat="plain"
            ext:documentView_textSize="16sp"
            ext:documentView_textSubPixel="true"
            android:layout_marginBottom="8dp"/>

        <com.bluejamesbond.text.DocumentView
            android:id="@+id/info_2"
            xmlns:ext="http://schemas.android.com/apk/res-auto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            ext:documentView_antialias="true"
            ext:documentView_cacheConfig="auto_quality"
            ext:documentView_hyphen="-"
            ext:documentView_reverse="false"
            ext:documentView_text="Test2"
            ext:documentView_textAlignment="justified"
            ext:documentView_textFormat="plain"
            ext:documentView_textSize="16sp"
            ext:documentView_textSubPixel="true"
            android:layout_marginBottom="8dp"/>

        <com.bluejamesbond.text.DocumentView
            android:id="@+id/info_3"
            xmlns:ext="http://schemas.android.com/apk/res-auto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            ext:documentView_antialias="true"
            ext:documentView_cacheConfig="auto_quality"
            ext:documentView_hyphen="-"
            ext:documentView_reverse="false"
            ext:documentView_text="Test3"
            ext:documentView_textAlignment="justified"
            ext:documentView_textFormat="plain"
            ext:documentView_textSize="16sp"
            ext:documentView_textSubPixel="true"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/map_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/info_3"
            android:layout_marginTop="8dp"
            android:background="#9575cd"
            android:onClick="location"
            android:text="POKAÅ» NA MAPIE" />

    </LinearLayout>
</ScrollView>